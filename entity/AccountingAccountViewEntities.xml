<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-2.1.xsd">

    <!-- ========================================================= -->
    <!-- mantle.account.financial -->
    <!-- ========================================================= -->

    <view-entity entity-name="FinancialAccountAndOwner" package="mantle.account.financial">
        <member-entity entity-alias="FACC" entity-name="mantle.account.financial.FinancialAccount"/>
        <member-entity entity-alias="OPTY" entity-name="mantle.party.Party" join-from-alias="FACC">
            <key-map field-name="ownerPartyId" related="partyId"/></member-entity>
        <member-entity entity-alias="OORG" entity-name="mantle.party.Organization" join-from-alias="FACC">
            <key-map field-name="ownerPartyId" related="partyId"/></member-entity>
        <member-entity entity-alias="OPER" entity-name="mantle.party.Person" join-from-alias="FACC">
            <key-map field-name="ownerPartyId" related="partyId"/></member-entity>
        <alias-all entity-alias="FACC"/>
        <alias entity-alias="OPTY" name="pseudoId"/>
        <alias entity-alias="OORG" name="organizationName"/>
        <alias entity-alias="OPER" name="firstName"/>
        <alias entity-alias="OPER" name="lastName"/>
    </view-entity>
    <view-entity entity-name="FinancialAccountAndTrans" package="mantle.account.financial">
        <member-entity entity-alias="FAT" entity-name="mantle.account.financial.FinancialAccountTrans"/>
        <member-entity entity-alias="FACC" entity-name="mantle.account.financial.FinancialAccount" join-from-alias="FAT">
            <key-map field-name="finAccountId"/></member-entity>
        <alias-all entity-alias="FACC"/>
        <alias-all entity-alias="FAT"/>
    </view-entity>
    <view-entity entity-name="FinancialAccountTransSummary" package="mantle.account.financial">
        <member-entity entity-alias="FAT" entity-name="mantle.account.financial.FinancialAccountTrans"/>
        <alias entity-alias="FAT" name="finAccountId"/>
        <alias entity-alias="FAT" name="minTransactionDate" field="transactionDate" function="min"/>
        <alias entity-alias="FAT" name="maxTransactionDate" field="transactionDate" function="max"/>
        <alias entity-alias="FAT" name="totalAmount" field="amount" function="sum"/>
    </view-entity>
    <view-entity entity-name="FinancialAccountActualView" package="mantle.account.financial">
        <member-entity entity-alias="FAT" entity-name="mantle.account.financial.FinancialAccountTrans"/>
        <alias name="finAccountId" entity-alias="FAT"/>
        <alias name="actualBalance" entity-alias="FAT" field="amount" function="sum"/>
    </view-entity>
    <view-entity entity-name="FinancialAccountAuthView" package="mantle.account.financial">
        <member-entity entity-alias="FAA" entity-name="mantle.account.financial.FinancialAccountAuth"/>
        <alias name="finAccountId" entity-alias="FAA"/>
        <alias name="expireDate" entity-alias="FAA"><description>Constrain the query with this but don't select it!</description></alias>
        <alias name="authBalance" entity-alias="FAA" field="amount" function="sum"/>
    </view-entity>

    <!-- ========================================================= -->
    <!-- mantle.account.invoice -->
    <!-- ========================================================= -->

    <view-entity entity-name="InvoiceSummary" package="mantle.account.invoice">
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice"/>
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem" join-from-alias="INV">
            <key-map field-name="invoiceId"/></member-entity>
        <alias name="fromPartyId" entity-alias="INV"/>
        <alias name="toPartyId" entity-alias="INV"/>
        <alias name="invoiceTypeEnumId" entity-alias="INV"/>
        <alias name="statusId" entity-alias="INV"/>
        <alias name="currencyUomId" entity-alias="INV"/>
        <alias name="invoiceDate" entity-alias="INV"><description>For summary use conditions for range, but don't select</description></alias>
        <alias name="invoiceCount" entity-alias="INV" field="invoiceId" function="count-distinct"/>
        <alias name="grandTotal" entity-alias="INV" field="invoiceTotal" function="sum"/>
        <alias name="unpaidTotal" entity-alias="INV" function="sum"/>
    </view-entity>
    <view-entity entity-name="InvoiceItemSummary" package="mantle.account.invoice">
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice"/>
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem" join-from-alias="INV">
            <key-map field-name="invoiceId"/></member-entity>
        <alias name="fromPartyId" entity-alias="INV"/>
        <alias name="toPartyId" entity-alias="INV"/>
        <alias name="invoiceTypeEnumId" entity-alias="INV"/>
        <alias name="statusId" entity-alias="INV"/>
        <alias name="currencyUomId" entity-alias="INV"/>
        <alias name="invoiceDate" entity-alias="INV"><description>For summary use conditions for range, but don't select</description></alias>
        <alias name="itemTypeEnumId" entity-alias="IITM"/>
        <alias name="overrideGlAccountId" entity-alias="IITM"/>
        <alias name="quantityTotal" entity-alias="IITM" field="quantity" function="sum"/>
        <alias name="itemsTotal" function="sum">
            <complex-alias operator="*">
                <complex-alias-field entity-alias="IITM" field="quantity"/>
                <complex-alias-field entity-alias="IITM" field="amount"/>
            </complex-alias>
        </alias>
    </view-entity>
    <view-entity entity-name="InvoiceItemDetailTotal" package="mantle.account.invoice">
        <member-entity entity-alias="IID" entity-name="mantle.account.invoice.InvoiceItemDetail"/>
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem" join-from-alias="IID">
            <key-map field-name="invoiceId"/><key-map field-name="invoiceItemSeqId"/></member-entity>
        <member-entity entity-alias="ATX" entity-name="mantle.ledger.transaction.AcctgTrans" join-from-alias="IID">
            <key-map field-name="invoiceId"/></member-entity>
        <member-entity entity-alias="ATE" entity-name="mantle.ledger.transaction.AcctgTransEntry" join-from-alias="ATX">
            <entity-condition>
                <econdition entity-alias="ATX" field-name="acctgTransId" to-entity-alias="ATE" to-field-name="acctgTransId"/>
                <econdition entity-alias="IID" field-name="invoiceItemSeqId" to-entity-alias="ATE" to-field-name="invoiceItemSeqId"/>
            </entity-condition>
        </member-entity>
        <alias entity-alias="IID" name="assetId"/>
        <alias entity-alias="IID" name="facilityId"/>
        <alias entity-alias="ATX" name="organizationPartyId"/>
        <alias entity-alias="ATX" name="transactionDate"/>
        <alias entity-alias="ATX" name="isPosted"/>
        <alias entity-alias="ATE" name="glAccountId"/>
        <alias name="totalAmount" function="sum"><complex-alias operator="*">
            <complex-alias-field entity-alias="IID" field="quantity"/>
            <complex-alias-field entity-alias="IITM" field="amount"/>
        </complex-alias></alias>
    </view-entity>
    <view-entity entity-name="InvoiceItemAndDetail" package="mantle.account.invoice">
        <member-entity entity-alias="IID" entity-name="mantle.account.invoice.InvoiceItemDetail"/>
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem" join-from-alias="IID">
            <key-map field-name="invoiceId"/><key-map field-name="invoiceItemSeqId"/></member-entity>
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice" join-from-alias="IID">
            <key-map field-name="invoiceId"/></member-entity>
        <alias-all entity-alias="IID"/>
        <alias-all entity-alias="IITM"><exclude field="quantity"/><exclude field="assetId"/></alias-all>
        <alias-all entity-alias="INV"><exclude field="description"/></alias-all>
        <alias name="itemQuantity" entity-alias="IITM" field="quantity"/>
        <alias name="itemAssetId" entity-alias="IITM" field="assetId"/>
    </view-entity>
    <view-entity entity-name="InvoiceItemAndType" package="mantle.account.invoice">
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem"/>
        <member-entity entity-alias="ITEN" entity-name="moqui.basic.Enumeration" join-from-alias="IITM">
            <key-map field-name="itemTypeEnumId" related="enumId"/></member-entity>
        <alias-all entity-alias="IITM"/>
        <alias name="itemTypeDescription" entity-alias="ITEN" field="description"/>
    </view-entity>

    <view-entity entity-name="InvoiceItemIssuanceSummary" package="mantle.account.invoice">
        <member-entity entity-alias="ASI" entity-name="mantle.product.issuance.AssetIssuance"/>
        <member-entity entity-alias="AST" entity-name="mantle.product.asset.Asset" join-from-alias="ASI">
            <key-map field-name="assetId"/></member-entity>
        <member-entity entity-alias="PROD" entity-name="mantle.product.Product" join-from-alias="AST">
            <key-map field-name="productId"/></member-entity>
        <member-entity entity-alias="IITM" entity-name="mantle.account.invoice.InvoiceItem" join-from-alias="ASI">
            <key-map field-name="invoiceId"/><key-map field-name="invoiceItemSeqId"/></member-entity>
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice" join-from-alias="ASI">
            <key-map field-name="invoiceId"/></member-entity>

        <alias-all entity-alias="ASI"><exclude field="productId"/><exclude field="quantity"/><exclude field="facilityId"/></alias-all>
        <alias-all entity-alias="AST"><exclude field="quantityOnHandTotal"/><exclude field="availableToPromiseTotal"/>
            <exclude field="receivedDate"/><exclude field="manufacturedDate"/><exclude field="expectedEndOfLife"/></alias-all>
        <alias name="quantity" entity-alias="ASI" function="sum"/>
        <alias name="quantityOnHandTotal" entity-alias="AST" function="sum"/>
        <alias name="availableToPromiseTotal" entity-alias="AST" function="sum"/>
        <alias name="receivedDate" entity-alias="AST" function="min"/>
        <alias name="manufacturedDate" entity-alias="AST" function="min"/>
        <alias name="expectedEndOfLife" entity-alias="AST" function="min"/>
        <alias entity-alias="PROD" name="pseudoId"/>
        <alias entity-alias="PROD" name="productName"/>
        <alias entity-alias="PROD" name="amountUomId"/>
        <alias entity-alias="PROD" name="amountFixed"/>
        <alias entity-alias="PROD" name="productTypeEnumId"/>
        <alias name="weightedAmount" function="sum"><complex-alias operator="*">
            <complex-alias-field entity-alias="ASI" field="quantity"/>
            <complex-alias-field entity-alias="IITM" field="amount"/>
        </complex-alias></alias>
        <alias name="minUnitAmount" entity-alias="IITM" field="amount" function="min"/>
        <alias name="maxUnitAmount" entity-alias="IITM" field="amount" function="max"/>
        <alias name="invoiceStatusId" entity-alias="INV" field="statusId"/>
    </view-entity>

    <view-entity entity-name="InvoiceAgingSummary" package="mantle.account.invoice">
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice"/>
        <alias name="fromPartyId" entity-alias="INV"/>
        <alias name="toPartyId" entity-alias="INV"/>
        <alias name="statusId" entity-alias="INV"/>
        <alias name="invoiceTypeEnumId" entity-alias="INV"/>
        <alias name="currencyUomId" entity-alias="INV"/>
        <alias name="invoiceCount" entity-alias="INV" field="invoiceId" function="count-distinct" type="number-integer"/>
        <!-- explicit period columns approach -->
        <!-- NOTE: issue with asOfDate concept, this SQL doesn't work and needs a database-specific conversion from string to
            timestamp or some way to pass typed PreparedStatement parameters for case.when.@expression:
            (${asOfDate != null ? '\'' + ec.l10n.format(asOfDate, 'yyyy-MM-dd HH:mm:ss') + '\'' : 'CURRENT_TIMESTAMP'} - INV.${dateField ?: 'DUE_DATE'})
         -->
        <alias name="currentDue" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) &lt; 0">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period1" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) BETWEEN 0 AND ${(periodDays?:30)}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period2" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) BETWEEN ${(periodDays?:30)+1} AND ${(periodDays?:30)*2}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period3" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) BETWEEN ${(periodDays?:30)*2+1} AND ${(periodDays?:30)*3}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period4" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) BETWEEN ${(periodDays?:30)*3+1} AND ${(periodDays?:30)*4}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="periodRemaining" function="sum">
            <case><when expression="(CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) &gt; ${(periodDays?:30)*4+1}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="totalDue" entity-alias="INV" field="unpaidTotal" function="sum"/>
    </view-entity>

    <view-entity entity-name="InvoiceAndPaymentApplication" package="mantle.account.invoice">
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice"/>
        <member-entity entity-alias="PAPP" entity-name="mantle.account.payment.PaymentApplication" join-from-alias="INV">
            <key-map field-name="invoiceId"/></member-entity>
        <alias-all entity-alias="INV"/>
        <alias-all entity-alias="PAPP"><exclude field="billingAccountId"/><exclude field="acctgTransResultEnumId"/></alias-all>
    </view-entity>

    <!-- ========================================================= -->
    <!-- mantle.account.method -->
    <!-- ========================================================= -->

    <view-entity entity-name="PaymentMethodAndType" package="mantle.account.method">
        <member-entity entity-alias="PMD" entity-name="mantle.account.method.PaymentMethod"/>
        <member-entity entity-alias="PMTE" entity-name="moqui.basic.Enumeration" join-from-alias="PMD">
            <key-map field-name="paymentMethodTypeEnumId" related="enumId"/></member-entity>
        <alias-all entity-alias="PMD"/>
        <alias name="typeDescription" entity-alias="PMTE" field="description"/>
    </view-entity>
    <view-entity entity-name="BankAccountCheckAndPayment" package="mantle.account.method">
        <member-entity entity-alias="BAC" entity-name="mantle.account.method.BankAccountCheck"/>
        <member-entity entity-alias="PMT" entity-name="mantle.account.payment.Payment" join-from-alias="BAC">
            <key-map field-name="paymentId"/></member-entity>
        <alias-all entity-alias="BAC"/>
        <alias-all entity-alias="PMT"><exclude field="paymentMethodId"/></alias-all>
        <alias entity-alias="PMT" name="pmtPaymentMethodId" field="paymentMethodId"/>
    </view-entity>

    <!-- ========================================================= -->
    <!-- mantle.account.payment -->
    <!-- ========================================================= -->

    <view-entity entity-name="PaymentApplicationAndInvoice" package="mantle.account.payment">
        <member-entity entity-alias="PAPP" entity-name="mantle.account.payment.PaymentApplication"/>
        <member-entity entity-alias="INVC" entity-name="mantle.account.invoice.Invoice" join-from-alias="PAPP">
            <key-map field-name="invoiceId"/></member-entity>
        <alias-all entity-alias="INVC"/>
        <alias entity-alias="PAPP" name="paymentId"/>
        <alias entity-alias="PAPP" name="amountApplied" function="sum"/>
    </view-entity>
</entities>
