<!-- General Guideline Verbs: GET=find, POST=create/do, PUT=store (create or update), PATCH=update, DELETE=delete  -->

<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-2.1.xsd"
        name="mantle" displayName="Mantle USL REST API" version="1.2.0"
        description="Mantle services and various convenient entity operations are available through this API.
            Not all possible entity operations are included in this API as they can be done through the automatic Entity
            REST API using Mantle entity names. See more information about Mantle at
            [http://www.moqui.org/mantle.html](http://www.moqui.org/mantle.html)">

    <resource name="lookup" description="Lookup from various entities by ID"><method type="get">
        <service name="mantle.GeneralServices.lookup#ById"/></method></resource>

    <!-- ========== My Info (no partyId or userId, services for current user) ========== -->
    <resource name="my">
        <resource name="userOrgInfo"><method type="get">
            <service name="mantle.party.PartyServices.setup#UserOrganizationInfo"/></method></resource>
        <resource name="noticeCounts"><method type="get">
            <service name="mantle.party.PartyServices.get#UserNoticeCounts"/></method></resource>
    </resource>

    <!-- ========== Parties ========== -->
    <resource name="parties" description="Parties - Customers, Suppliers, Contacts, Employees, etc">
        <method type="get"><service name="mantle.party.PartyServices.find#Party"/></method>

        <id name="partyId">
            <method type="get"><entity name="parties" masterName="default" operation="one"/></method>
            <method type="patch"><entity name="parties" masterName="default" operation="update"/></method>

            <resource name="contact"><method type="get">
                <entity name="parties" masterName="contact" operation="one"/></method></resource>
            <resource name="basic"><method type="get">
                <entity name="parties" masterName="basic" operation="one"/></method></resource>

            <resource name="user">
                <method type="post"><service name="mantle.party.PartyServices.create#PartyUserAccount"/></method>
                <method type="patch"><service name="mantle.party.PartyServices.update#PartyUserAccount"/></method>
            </resource>
            <resource name="personAndUser"><method type="patch">
                <service name="mantle.party.PartyServices.update#Account"/></method></resource>

            <resource name="roles">
                <method type="get"><entity name="mantle.party.PartyRole" operation="list"/></method>
                <id name="roleTypeId">
                    <method type="get"><entity name="mantle.party.PartyRole" operation="one"/></method>
                    <method type="post"><entity name="mantle.party.PartyRole" operation="create"/></method>
                    <method type="delete"><entity name="mantle.party.PartyRole" operation="delete"/></method>
                </id>
            </resource>
            <resource name="identifications">
                <method type="get"><entity name="mantle.party.PartyIdentification" operation="list"/></method>
                <method type="post"><entity name="mantle.party.PartyIdentification" operation="create"/></method>
                <id name="partyIdTypeEnumId">
                    <method type="get"><entity name="mantle.party.PartyIdentification" operation="one"/></method>
                    <method type="patch"><entity name="mantle.party.PartyIdentification" operation="update"/></method>
                    <method type="delete"><entity name="mantle.party.PartyIdentification" operation="delete"/></method>
                </id>
            </resource>
            <resource name="settings">
                <method type="get"><entity name="mantle.party.PartySetting" operation="list"/></method>
                <id name="partySettingTypeId">
                    <method type="get"><service name="mantle.party.PartyServices.get#PartySettingValue"/></method>
                    <method type="put"><service name="mantle.party.PartyServices.store#PartySetting"/></method>
                    <method type="delete"><entity name="mantle.party.PartySetting" operation="delete"/></method>
                </id>
            </resource>

            <resource name="contactMechs">
                <method type="get"><entity name="mantle.party.contact.PartyContactMechInfo" operation="list"/></method>
                <method type="put"><service name="mantle.party.ContactServices.store#PartyContactInfo"/></method>

                <id name="contactMechId">
                    <method type="delete"><service name="mantle.party.ContactServices.delete#PartyContactMech"/></method>
                    <resource name="postalAddress"><method type="patch">
                        <service name="mantle.party.ContactServices.update#PartyPostalAddress"/></method></resource>
                    <resource name="telecomNumber"><method type="patch">
                        <service name="mantle.party.ContactServices.update#PartyTelecomNumber"/></method></resource>
                    <resource name="other"><method type="patch">
                        <service name="mantle.party.ContactServices.update#PartyContactOther"/></method></resource>
                </id>

                <resource name="info"><method type="get">
                    <service name="mantle.party.ContactServices.get#PartyContactInfo"/></method></resource>
                <resource name="infoList"><method type="get">
                    <service name="mantle.party.ContactServices.get#PartyContactInfoList"/></method></resource>

                <resource name="postalAddresses">
                    <method type="get"><entity name="mantle.party.contact.PartyContactMechPostalAddress" operation="list"/></method>
                    <resource name="findOrCreate"><method type="post">
                        <service name="mantle.party.ContactServices.findOrCreate#PartyPostalAddress"/></method></resource>
                </resource>
                <resource name="telecomNumbers"><method type="get">
                    <entity name="mantle.party.contact.PartyContactMechTelecomNumber" operation="list"/></method></resource>
                <resource name="emailAddresses"><resource name="primary"><method type="get">
                    <service name="mantle.party.ContactServices.get#PrimaryEmailAddress"/></method></resource></resource>
                <resource name="other"><method type="patch">
                    <service name="mantle.party.ContactServices.update#PartyContactOther"/></method></resource>
            </resource>

            <resource name="communicationEvents"><method type="get">
                <service name="mantle.party.CommunicationServices.find#PartyCommunicationEvents"/></method></resource>

            <!-- TODO content services -->

            <resource name="paymentMethods">
                <method type="put"><service name="mantle.account.PaymentMethodServices.store#PaymentMethodInfo"/></method>

                <resource name="info"><method type="get">
                    <service name="mantle.account.PaymentMethodServices.get#PartyPaymentMethodInfo"/></method></resource>
                <resource name="infoList"><method type="get">
                    <service name="mantle.account.PaymentMethodServices.get#PartyPaymentMethodInfoList"/></method></resource>
            </resource>
        </id>

        <!-- curl -X GET -u john.doe:moqui -i http://localhost:8080/rest/s1/mantle/parties/search?firstName=John -->
        <resource name="search"><method type="get">
            <service name="mantle.party.PartyServices.search#Party"/></method></resource>

        <resource name="person"><method type="post">
            <service name="mantle.party.PartyServices.create#Person"/></method></resource>
        <resource name="personAndUser"><method type="post">
            <service name="mantle.party.PartyServices.create#Account"/></method></resource>
        <resource name="organization"><method type="post">
            <service name="mantle.party.PartyServices.create#Organization"/></method></resource>
        <resource name="roleTypes">
            <method type="get"><entity name="mantle.party.RoleType" operation="list"/></method>
            <id name="roleTypeId">
                <method type="get"><entity name="mantle.party.RoleType" operation="one"/></method>
            </id>
        </resource>

        <!-- ========== Contact Mechanisms ========== -->
        <resource name="contactMechs" description="Contact Mechanisms - Postal Address, Telecom Number, Email Address, etc; limited options here, most under parties and facilities">
            <id name="contactMechId">
                <method type="get"><entity name="contactMechs" masterName="default" operation="one"/></method>
                <resource name="mutable"><method type="patch">
                    <service name="mantle.party.ContactServices.update#ContactMechMutable"/></method></resource>
                <resource name="postalAddress"><resource name="geoIdSet"><method type="get">
                    <service name="mantle.party.ContactServices.get#PostalAddressGeoIdSet"/></method></resource></resource>
            </id>

            <resource name="postalAddresses"><method type="post">
                <service name="mantle.party.ContactServices.create#PostalAddress"/></method></resource>
            <resource name="telecomNumbers"><method type="post">
                <service name="mantle.party.ContactServices.create#TelecomNumber"/></method></resource>
            <resource name="emailAddresses"><method type="post">
                <service name="mantle.party.ContactServices.create#EmailAddress"/></method></resource>
            <resource name="others"><method type="post">
                <service name="mantle.party.ContactServices.create#ContactMechOther"/></method></resource>

            <resource name="purposes">
                <method type="get"><entity name="mantle.party.contact.ContactMechPurpose" operation="list"/></method>
                <id name="contactMechPurposeId">
                    <method type="get"><entity name="mantle.party.contact.ContactMechPurpose" operation="one"/></method></id>
            </resource>
        </resource>

        <!-- ========== Communication Events ========== -->
        <resource name="communicationEvents" description="Communication Events - Message, Call, etc">
            <method type="get"><entity name="communicationEvents" operation="list"/></method>
            <method type="post"><service name="mantle.party.CommunicationServices.create#Message"/></method>
            <id name="communicationEventId">
                <method type="get"><entity name="communicationEvents" masterName="default" operation="one"/></method>
                <method type="patch"><entity name="communicationEvents" operation="update"/></method>
                <resource name="reply"><method type="post">
                    <service name="mantle.party.CommunicationServices.reply#CommunicationEvent"/></method></resource>
            </id>
        </resource>

        <!-- ========== Payment Methods ========== -->
        <resource name="paymentMethods" description="Payment Methods - Bank Accounts, Credit Cards, etc">
            <method type="get"><entity name="paymentMethods" operation="list"/></method>
            <method type="post"><entity name="paymentMethods" operation="create"/></method>

            <id name="paymentMethodId">
                <method type="get"><entity name="paymentMethods" masterName="default" operation="one"/></method>
                <method type="delete"><service name="mantle.account.PaymentMethodServices.delete#PaymentMethod"/></method>

                <resource name="mutable"><method type="patch">
                    <service name="mantle.account.PaymentMethodServices.update#PaymentMethodMutable"/></method></resource>
                <resource name="expunge"><method type="delete">
                    <service name="mantle.account.PaymentMethodServices.expunge#PaymentMethod"/></method></resource>

                <resource name="creditCard"><method type="patch">
                    <service name="mantle.account.PaymentMethodServices.update#CreditCard"/></method></resource>
                <resource name="bankAccount"><method type="patch">
                    <service name="mantle.account.PaymentMethodServices.update#BankAccount"/></method></resource>
                <!-- TODO content services -->
            </id>

            <resource name="creditCards"><method type="post">
                <service name="mantle.account.PaymentMethodServices.create#CreditCard"/></method></resource>
            <resource name="bankAccounts"><method type="post">
                <service name="mantle.account.PaymentMethodServices.create#BankAccount"/></method></resource>
        </resource>
    </resource>

    <!-- ========== Facilities ========== -->
    <resource name="facilities" description="Facilities - Warehouse, Dock, Line, Office, Land, etc">
        <method type="get"><entity name="facilities" operation="list"/></method>
        <method type="post"><service name="mantle.facility.FacilityServices.create#Facility"/></method>

        <id name="facilityId">
            <method type="get"><entity name="facilities" masterName="default" operation="one"/></method>
            <method type="patch"><service name="mantle.facility.FacilityServices.update#Facility"/></method>

            <resource name="locations">
                <method type="get"><entity name="mantle.facility.FacilityLocation" operation="list"/></method>
                <method type="post"><service name="mantle.facility.FacilityServices.create#FacilityLocation"/></method>

                <id name="locationSeqId">
                    <method type="get"><entity name="mantle.facility.FacilityLocation" operation="one"/></method>
                    <method type="patch"><entity name="mantle.facility.FacilityLocation" operation="update"/></method>
                </id>
            </resource>
            <resource name="contactMechs">
                <method type="get"><entity name="mantle.facility.FacilityContactMechInfo" operation="list"/></method>

                <id name="contactMechId">
                    <method type="delete"><service name="mantle.facility.ContactServices.delete#FacilityContactMech"/></method>
                    <resource name="postalAddress"><method type="patch">
                        <service name="mantle.facility.ContactServices.update#FacilityPostalAddress"/></method></resource>
                    <resource name="telecomNumber"><method type="patch">
                        <service name="mantle.facility.ContactServices.update#FacilityTelecomNumber"/></method></resource>
                    <resource name="other"><method type="patch">
                        <service name="mantle.facility.ContactServices.update#FacilityContactOther"/></method></resource>
                </id>

                <resource name="info"><method type="get">
                    <service name="mantle.facility.ContactServices.get#FacilityContactInfo"/></method></resource>

                <resource name="postalAddresses"><method type="get">
                    <entity name="mantle.facility.FacilityContactMechPostalAddress" operation="list"/></method></resource>
                <resource name="telecomNumbers"><method type="get">
                    <entity name="mantle.facility.FacilityContactMechTelecomNumber" operation="list"/></method></resource>
                <resource name="other"><method type="patch">
                    <service name="mantle.facility.ContactServices.update#FacilityContactOther"/></method></resource>
            </resource>

            <resource name="products"><id name="productId">
                <resource name="physicalQuantity"><method type="post">
                    <service name="mantle.product.AssetServices.record#PhysicalInventoryQuantity"/></method></resource>
                <resource name="physicalChange"><method type="post">
                    <service name="mantle.product.AssetServices.record#PhysicalInventoryChange"/></method></resource>
            </id></resource>

            <!-- TODO content services -->
        </id>
    </resource>

    <!-- ========== Products ========== -->
    <resource name="products" description="Products - Finished Goods, Materials, Supplies, Equipment, etc">
        <!-- TODO use product search service -->

        <id name="productId">
            <method type="get"><entity name="products" masterName="default" operation="one"/></method>
            <method type="patch"><entity name="products" operation="update"/></method>
            <method type="delete"><service name="mantle.product.ProductServices.delete#Product"/></method>

            <resource name="price"><method type="get">
                <service name="mantle.product.PriceServices.get#ProductPrice"/></method></resource>
            <resource name="features"><method type="get">
                <service name="mantle.product.ProductServices.find#ProductFeatures"/></method></resource>
            <resource name="featureGroups"><method type="get">
                <service name="mantle.product.ProductServices.find#ProductFeatureGroups"/></method></resource>
            <resource name="variants">
                <method type="get"><service name="mantle.product.ProductServices.find#VariantProduct"/></method>
                <method type="post"><service name="mantle.product.ProductServices.create#VariantProducts"/></method>
                <method type="delete"><service name="mantle.product.ProductServices.delete#VariantProducts"/></method>
            </resource>
            <resource name="clone"><method type="post">
                <service name="mantle.product.ProductServices.clone#Product"/></method></resource>

            <resource name="categories">
                <method type="get"><entity name="mantle.product.category.ProductCategoryMember" operation="list"/></method>
                <method type="post"><entity name="mantle.product.category.ProductCategoryMember" operation="create"/></method>
                <id name="productCategoryId">
                    <method type="get"><entity name="mantle.product.category.ProductCategoryMember" operation="list"/></method>
                    <id name="fromDate">
                        <method type="get"><entity name="mantle.product.category.ProductCategoryMember" operation="one"/></method>
                        <method type="patch"><entity name="mantle.product.category.ProductCategoryMember" operation="update"/></method>
                        <method type="delete"><entity name="mantle.product.category.ProductCategoryMember" operation="delete"/></method>
                    </id>
                </id>
            </resource>
            <resource name="identifications">
                <method type="get"><entity name="mantle.product.ProductIdentification" operation="list"/></method>
                <method type="post"><entity name="mantle.product.ProductIdentification" operation="create"/></method>
                <id name="productIdTypeEnumId">
                    <method type="get"><entity name="mantle.product.ProductIdentification" operation="one"/></method>
                    <method type="patch"><entity name="mantle.product.ProductIdentification" operation="update"/></method>
                    <method type="delete"><entity name="mantle.product.ProductIdentification" operation="delete"/></method>
                </id>
            </resource>
            <resource name="prices">
                <method type="get"><entity name="mantle.product.ProductPrice" operation="list"/></method>
                <method type="post"><entity name="mantle.product.ProductPrice" operation="create"/></method>
                <id name="productPriceId">
                    <method type="get"><entity name="mantle.product.ProductPrice" operation="one"/></method>
                    <method type="patch"><entity name="mantle.product.ProductPrice" operation="update"/></method>
                    <method type="delete"><entity name="mantle.product.ProductPrice" operation="delete"/></method>
                </id>
            </resource>
            <!-- TODO content services -->
        </id>

        <resource name="categories">
            <method type="get"><entity name="categories" operation="list"/></method>
            <id name="productCategoryId">
                <method type="get"><entity name="categories" masterName="default" operation="one"/></method>

                <resource name="features"><method type="get">
                    <service name="mantle.product.ProductServices.find#ProductCategoryFeatures"/></method></resource>
            </id>
        </resource>
        <resource name="features">
            <method type="get"><entity name="features" operation="list"/></method>
            <id name="productFeatureId">
                <method type="get"><entity name="features" masterName="default" operation="one"/></method>
            </id>
            <resource name="byIactnOrAll"><method type="get">
                <service name="mantle.product.ProductServices.get#FeatureByIactnOrAll"/></method></resource>
            <resource name="groups">
                <id name="productFeatureGroupId">
                    <method type="get"><entity name="featureGroups" masterName="default" operation="one"/></method>
                </id>
            </resource>
        </resource>
        <resource name="stores">
            <method type="get"><entity name="productStores" operation="list"/></method>
            <method type="post"><entity name="productStores" masterName="default" operation="create"/></method>
            <id name="productStoreId">
                <method type="get"><entity name="productStores" masterName="default" operation="one"/></method>
                <method type="put"><entity name="productStores" masterName="default" operation="update"/></method>
                <resource name="shippingOptions"><method type="get">
                    <service name="mantle.product.StoreServices.get#StoreShippingOptions"/></method></resource>
            </id>
        </resource>
        <resource name="dimensionTypes">
            <method type="get"><entity name="mantle.product.ProductDimensionType" operation="list"/></method>
            <id name="dimensionTypeId">
                <method type="get"><entity name="mantle.product.ProductDimensionType" operation="one"/></method>
            </id>
        </resource>
    </resource>

    <!-- ========== Assets ========== -->
    <resource name="assets" description="Assets - Inventory, Supplies, Equipment, etc">
        <method type="get"><entity name="assets" operation="list"/></method>

        <id name="assetId">
            <method type="get"><entity name="assets" masterName="default" operation="one"/></method>

            <resource name="displayInfo"><method type="get">
                <service name="mantle.product.AssetServices.get#AssetDisplayInfo"/></method></resource>
            <resource name="receipt"><method type="patch">
                <service name="mantle.product.AssetServices.update#AssetAndReceipt"/></method></resource>
            <resource name="replaceParty"><method type="post">
                <service name="mantle.product.AssetServices.replace#AssetPartyAssignment"/></method></resource>

            <resource name="reservations">
                <resource name="displace"><method type="post">
                    <service name="mantle.product.AssetServices.displace#AssetReservations"/></method></resource>
            </resource>
        </id>

        <resource name="receive"><method type="post">
            <service name="mantle.product.AssetServices.receive#Asset"/></method></resource>

        <resource name="reservations">
            <method type="get"><entity name="mantle.product.issuance.AssetReservation" operation="list"/></method>
            <id name="assetReservationId">
                <method type="get"><entity name="mantle.product.issuance.AssetReservation" operation="one"/></method>
                <resource name="reduce"><method type="post">
                    <service name="mantle.product.AssetServices.reduce#AssetReservation"/></method></resource>
                <resource name="move"><method type="post">
                    <service name="mantle.product.AssetServices.move#AssetReservation"/></method></resource>
            </id>
        </resource>
    </resource>

    <!-- ========== Orders ========== -->
    <resource name="orders" description="Orders - Purchase and Sales">
        <method type="get"><entity name="mantle.order.OrderHeaderAndPart" operation="list"/></method>
        <method type="post"><service name="mantle.order.OrderServices.create#Order"/></method>
        <method type="put"><service name="mantle.order.OrderBulkServices.store#Order"/></method>

        <id name="orderId">
            <method type="get"><entity name="orders" masterName="default" operation="one"/></method>

            <resource name="displayInfo"><method type="get">
                <service name="mantle.order.OrderInfoServices.get#OrderDisplayInfo"/></method></resource>

            <resource name="parts">
                <method type="post"><service name="mantle.order.OrderServices.create#OrderPart"/></method>

                <id name="orderPartSeqId">
                    <method type="patch"><service name="mantle.order.OrderServices.update#OrderPart"/></method>

                    <resource name="shipping"><resource name="calculate"><method type="post">
                        <service name="mantle.shipment.CarrierServices.calculate#OrderPartShipping"/></method></resource></resource>
                    <resource name="payments">
                        <method type="get"><entity name="payments" operation="list"/></method>
                        <method type="post"><service name="mantle.order.OrderServices.add#OrderPartPayment"/></method>
                    </resource>
                    <resource name="invoices"><method type="post">
                        <service name="mantle.account.InvoiceServices.create#EntireOrderPartInvoice"/></method></resource>
                    <resource name="shipments">
                        <method type="post"><service name="mantle.shipment.ShipmentServices.ship#OrderPart"/></method>
                        <id name="shipmentId"><method type="post">
                            <service name="mantle.shipment.ShipmentServices.add#OrderPartToShipment"/></method></id>
                    </resource>
                    <resource name="return"><method type="post">
                        <service name="mantle.order.ReturnServices.create#ReturnFromOrder"/></method></resource>
                </id>
            </resource>

            <resource name="items">
                <method type="post"><service name="mantle.order.OrderServices.create#OrderItem"/></method>
                <id name="orderItemSeqId">
                    <method type="patch"><service name="mantle.order.OrderServices.update#OrderItem"/></method>
                    <method type="delete"><service name="mantle.order.OrderServices.delete#OrderItem"/></method>

                    <resource name="reservations">
                        <method type="get"><entity name="mantle.product.issuance.AssetReservation" operation="list"/></method>
                        <method type="post"><service name="mantle.product.AssetServices.reserve#AssetForOrderItem"/></method>
                        <method type="delete"><service name="mantle.product.AssetServices.remove#OrderItemReservations"/></method>
                    </resource>

                    <resource name="billings"><method type="get">
                        <entity name="mantle.order.OrderItemBilling" operation="list"/></method></resource>
                    <resource name="shipments"><method type="get">
                        <entity name="mantle.shipment.ShipmentItemSource" operation="list"/></method></resource>

                    <resource name="issuances"><method type="get">
                        <entity name="mantle.product.issuance.AssetIssuance" operation="list"/></method></resource>
                    <resource name="receipts"><method type="get">
                        <entity name="mantle.product.receipt.AssetReceipt" operation="list"/></method></resource>

                    <resource name="return"><method type="post">
                        <service name="mantle.order.ReturnServices.add#OrderItemToReturn"/></method></resource>
                </id>
            </resource>
            <resource name="productItems"><id name="orderItemSeqId"><method type="patch">
                <service name="mantle.order.OrderServices.update#OrderProductQuantity"/></method></id></resource>

            <!-- TODO content services -->

            <resource name="shippingBilling"><method type="put">
                <service name="mantle.order.OrderServices.set#OrderBillingShippingInfo"/></method></resource>

            <resource name="shipping"><resource name="calculate"><method type="post">
                <service name="mantle.shipment.CarrierServices.calculate#OrderShipping"/></method></resource></resource>
            <resource name="salesTax"><resource name="calculate"><method type="post">
                <service name="mantle.other.TaxServices.calculate#OrderSalesTax"/></method></resource></resource>

            <resource name="payments"><resource name="authorize"><method type="post">
                <service name="mantle.account.PaymentServices.authorize#OrderPayments"/></method></resource></resource>

            <resource name="assets"><resource name="reserve"><method type="post">
                <service name="mantle.product.AssetServices.reserve#AssetsForOrder"/></method></resource></resource>
            <resource name="propose"><method type="post">
                <service name="mantle.order.OrderServices.propose#Order"/></method></resource>
            <resource name="place"><method type="post">
                <service name="mantle.order.OrderServices.place#Order"/></method></resource>
            <resource name="approve"><method type="post">
                <service name="mantle.order.OrderServices.approve#Order"/></method></resource>
            <resource name="cancel"><method type="post">
                <service name="mantle.order.OrderServices.cancel#Order"/></method></resource>

            <resource name="billings"><method type="get">
                <entity name="mantle.order.OrderItemBilling" operation="list"/></method></resource>

            <resource name="clone"><method type="post">
                <service name="mantle.order.OrderServices.clone#Order"/></method></resource>
        </id>
        <resource name="productQuantity"><method type="put">
            <service name="mantle.order.OrderServices.add#OrderProductQuantity"/></method></resource>
    </resource>

    <!-- ========== Shipments ========== -->
    <resource name="shipments" description="Shipments - Incoming and Outgoing">
        <method type="get"><entity name="mantle.shipment.ShipmentFindView" operation="list"/></method>
        <method type="post"><service name="mantle.shipment.ShipmentServices.create#Shipment"/></method>

        <id name="shipmentId">
            <method type="get"><entity name="shipments" masterName="default" operation="one"/></method>
            <method type="patch"><service name="mantle.shipment.ShipmentServices.update#ShipmentAndRouteSegment"/></method>

            <resource name="displayInfo"><method type="get">
                <service name="mantle.shipment.ShipmentServices.get#ShipmentDisplayInfo"/></method></resource>
            <resource name="contactInfo"><method type="get">
